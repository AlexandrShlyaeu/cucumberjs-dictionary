        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
        <style>
          
    #filter {
      width: 100%;
      font-size: 18pt;
      padding: 10px;
      background-color: #F0F0F0;
      border: 1px solid #CCC;
      color: #0088B5;
    }
    .filename-header {
      font-size: 13pt;
    }
    .step-defintion {
      padding: 20px 5px;
    }
    .label {
      color: #000;
    }
    .form-group, .controls, .footer {
      padding: 20px 0;
    }
    .fileToggleButton {
      float: left;
      position: relative;
      margin-right: 10px;
      border: 1px solid #CCC;
      background-color: #FFF;
      font-size: 8pt;
      color: #AAA;
    }
